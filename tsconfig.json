{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["dom", "es2018", "esnext.asynciterable"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "target": "ES2020",
    "typeRoots": ["node_modules/@types", "typings"],
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src/ts/**/*.ts"],
  "exclude": ["node_modules"]
}
